#include "myshell.h"

/**
 * _getenv - return the value of env variable
 * @name: the name of variable
 * Return: the value pairs as char*
 */

char *_getenv(const char *name) {
    for (int i = 0; environ[i] != NULL; i++) {
        char *equals = strchr(environ[i], '=');

        if (equals != NULL) {
            size_t var_len = equals - environ[i];

            if (strncmp(environ[i], name, var_len) == 0 && name[var_len] == '\0'
                return equals + 1;
            }
        }
    }

    /* If the environment variable is not found, return NULL */
    return NULL;
}
